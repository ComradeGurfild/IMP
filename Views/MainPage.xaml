<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:IMP_reseni.ViewModels"
             x:Class="IMP_reseni.MainPage"  
             Title=""
             BackgroundColor="{StaticResource Key=Primary}"
             x:Name="MainPageView"
             >
    <ContentPage.BindingContext >
        <ViewModels:MainPageViewModel/>
    </ContentPage.BindingContext>
    <NavigationPage.TitleView >
      
        <FlexLayout 
            Margin="0,0,15,0"
            Padding="0"
             Direction="Row"
                AlignItems="Center"
                JustifyContent="SpaceBetween"
            >
            <Label
            Text="SS"
            FontSize="Title"
            TextColor="White"
            />
            <Label
            Text="Hlavní Stránka"
            FontSize="Title"
            TextColor="White"
            />

            <ImageButton Source="loginicon.svg"
                         MaximumHeightRequest="50" MaximumWidthRequest="50"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{x:Reference MainPageView}"/>
            <!--Clicked="GoToLogin"-->
        </FlexLayout>
  
    </NavigationPage.TitleView>



    <StackLayout Margin="0,10,0,0">

        


        <!--<FlexLayout 
            Margin="0,0,0,0"
            Padding="0"
            Direction="Row"
            AlignItems="Center"
            JustifyContent="SpaceBetween"
            >
            <Label
            Text="Ikona"
            FontSize="Title"
            TextColor="White"
            />
            <Label
            Text="Hlavní Stránka"
            FontSize="Title"
            TextColor="White"
            />
            <Label
            Text="Ikona"
            FontSize="Title"
            TextColor="White"
            />
        </FlexLayout>-->

        <Border Margin="10,0,10,0"
               Background="White"
                StrokeShape="RoundRectangle 40">
            <SearchBar Placeholder="Search items" 
                       FontSize="Title"
               />
        </Border>

       
        <!--<Border
             StrokeShape="RoundRectangle 40,40,0,0"
        Background="#D9D9D9"
        VerticalOptions="Start"
            >
           
        </Border>-->
        <Border 
        StrokeShape="RoundRectangle 40,40,0,0"
        Background="#D9D9D9"
        Margin="0,50,0,0"
        VerticalOptions="FillAndExpand">
            <VerticalStackLayout>

                <Label
            HorizontalOptions="Center"
                    TextColor="{StaticResource Key=Primary}"
                    FontSize="Title"
                    FontAttributes="Bold"
                    Text="Kategorie"
                    />
                <ScrollView>

                    <Grid ColumnDefinitions="*,*"/>

                </ScrollView>
            
        </VerticalStackLayout>
        </Border>
    </StackLayout>
</ContentPage>
